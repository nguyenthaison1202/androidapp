<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:id="@+id/imageReject"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:src="@drawable/welcomeback"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="15dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/nameStoryReject"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Giay "
                android:textSize="25sp"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#b8b6b6"
                android:layout_marginEnd="15dp"/>
            <ImageView
                android:id="@+id/btnMenuReject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="alo"
                android:layout_marginStart="-15dp"
                android:src="@drawable/ic_baseline_more_vert_24"

                />

        </LinearLayout>
        <TextView
            android:id="@+id/tittleStoryReject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xe máy - Đã qua sử dụng"
            android:textSize="20sp"
            android:textColor="#b8b6b6"/>
        <TextView
            android:id="@+id/priceStoryReject"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="750.000đ"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#b8b6b6"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Tin này đã bị từ chối"
            android:textSize="20sp"
            android:textColor="#cfcfcf"
            android:layout_marginTop="50dp"/>
    </LinearLayout>

</LinearLayout>